<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/perdeu"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/signind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:drawableLeft="@drawable/ic_baseline_local_police_24"
        android:drawableRight="@drawable/ic_baseline_local_police_24"
        android:gravity="center"
        android:text="Cadastro Detento"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="normal" />


    <EditText
        android:id="@+id/NomeD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signind"
        android:layout_marginStart="10dp"

        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#50ffffff"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="10dp"
        android:hint="Nome"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/DataNasD"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NomeD"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="#50ffffff"
        android:drawableLeft="@drawable/ic_baseline_date_range_24"
        android:drawablePadding="10dp"
        android:hint="Data Nascimento"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/CpfD"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DataNasD"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#50ffffff"
        android:drawableLeft="@drawable/ic_baseline_contacts_24"
        android:drawablePadding="10dp"
        android:hint="Cpf do Detento"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/FichaC"
        android:layout_width="386dp"
        android:layout_height="209dp"
        android:layout_below="@+id/CpfD"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#50ffffff"
        android:drawablePadding="10dp"
        android:gravity="left"
        android:hint="Ficha Criminal"
        android:padding="18dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/CadastroDt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FichaC"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/red"
        android:text="Cadastrar" />


</RelativeLayout>
